@using Core.Models;
@model List<Category>?

<div class="container-fluid">




<table class="table">
        <a class="btn btn-success my-4" asp-action="Create" asp-controller="Category">Create</a>
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">NAME</th>
            <th>ACTIONS</th>
   
        </tr>
    </thead>
    <tbody>

            @foreach(Category c in Model)
            {
                <tr>
                    <th>@c.Id</th>
                    <td>@c.Name</td>
                    <th>
                        <a asp-action="Update" asp-controller="Category" asp-route-id="@c.Id" class="btn btn-warning">UPDATE</a>
                        <form asp-action="Delete" asp-controller="Category" asp-route-id="@c.Id" method="POST">
                            <button class="btn btn-danger">DELETE</button>
                        </form>
                    </th>
                </tr>

            }


      
    </tbody>
</table>


</div>
@using Core.Models;
@using MVC.ViewModels;
@model ProductCreateViewModel

<form method="POST" asp-action="Create" asp-controller="Product" enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for='@Model.Product.ShowcasePrimaryText' class="form-label"></label>
        <input asp-for='@Model.Product.ShowcasePrimaryText' class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Product.ShowcasePrimaryText"></span>
    </div>

    <div class="mb-3">
        <label asp-for='@Model.Product.ShowcaseSecondaryText' class="form-label"></label>
        <input asp-for='@Model.Product.ShowcaseSecondaryText' class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Product.ShowcaseSecondaryText"></span>
    </div>


    <div class="mb-3">
        <label asp-for='@Model.Product.ProjectName' class="form-label"></label>
        <input asp-for='@Model.Product.ProjectName' class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Product.ProjectName"></span>
    </div>


    <div class="mb-3">
        <label asp-for='@Model.Product.Description' class="form-label"></label>
        <input asp-for='@Model.Product.Description' class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Product.Description"></span>
    </div>

    <div class="mb-3">
        <label asp-for='@Model.Product.MiniDescription' class="form-label"></label>
        <input asp-for='@Model.Product.MiniDescription' class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Product.MiniDescription"></span>
    </div>


    <div class="mb-3">
        <select asp-for="@Model.Product.CategoryId">
            @foreach(Category category in Model.Categories)
        {
            <option value="@category.Id">
                @category.Name               
            </option>
        }

        </select>


    </div>


    <div class="mb-3">
        <label asp-for='@Model.Product.ProductImage' class="form-label"></label>
        <input asp-for='@Model.Product.ProductImage' class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Product.ProductImage"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>